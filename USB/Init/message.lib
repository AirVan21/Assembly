		mov [eax], ebx 					; ZERO field 
		
		; (0x08)
		add eax, 04h 					;
		mov ebx, 80120180h 				; [31] = 1 In Packet; [14:12] = 000b; [9:8] = 01b IN PID; [7:0] = 0x80 Ready Status 
