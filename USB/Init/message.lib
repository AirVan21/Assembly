; Temporary BAR information


qTDOffset   = 80h 
qBuffOffset = 00008000h

PeriodicFramInMem = 10000000h 

QHInMem    =  00A00000h
qTDfirst   =  00A01000h
qTDBufferR =  00900000h
qTDBufferW =  00800000h

	; Extra function Processing start 
	; 
	; EBX - contains Base Address 
	introInMessaging:
		
		push eax				; Save Registers 
