	; Prints Everything from Simple Buffer 
	; 
	printUploadBuffer:

		push eax                        ; Saves eax
		push ebx                        ; 
		push edx   

		mov eax, qTDBufferW				;
		mov ebx, fs:[eax]				; Gets DWORD from Buffer 

		push bx
		shr ebx, 16
		push bx 

		call printWordFromStackRM
		call printWordFromStackRM 

		pop edx 
		pop ebx                         ; Recover 
		pop eax 

		db 0C3h                			; ret 


endm